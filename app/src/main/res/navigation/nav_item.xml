<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_item"
    app:startDestination="@id/itemsList">

    <fragment
        android:id="@+id/itemsList"
        android:name="com.example.fakestore.ItemsList"
        android:label="ItemsList" >
        <action
            android:id="@+id/action_itemsList_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.fakestore.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="selectedProduct"
            app:argType="com.example.fakestore.network.FakestoreProducts"/>
    </fragment>
</navigation>